<MainScreenView>:
    canvas.before:
        Color:
            rgb: app.theme_manager.bg_color
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        # Master layout containing the grid and sidebar.
        BoxLayout:
            id: master_layout
            orientation: 'horizontal'
            padding: "15dp"
            spacing: "10dp"
            size_hint: 1, 1
            pos_hint: {'x': 0, 'y': 0}

            RelativeLayout:
                id: sidebar
                size_hint: (0.15, 1)

            FloatLayout:
                id: grid
                canvas.before:
                    StencilPush
                    Rectangle:
                        pos: self.pos
                        size: self.size
                    StencilUse
                canvas.after:
                    StencilUnUse
                    StencilPop
                size_hint: (0.85, 1)
