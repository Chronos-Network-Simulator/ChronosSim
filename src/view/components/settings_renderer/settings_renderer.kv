<NumericSettingView>:
    orientation: 'vertical'
    spacing: "15dp"
    size_hint: 1, None
    height: self.minimum_height

    BoxLayout:
        size_hint: 1, None
        height:self.minimum_height
        spacing: "10dp"
        orientation: "horizontal"

        Label:
            text: root.title + ":"
            font_size: 16
            text_size: None, None
            size_hint: None, None
            size: self.texture_size
            halign: 'left'
            font_name: 'Inter-Medium'
            color: app.theme_manager.text_color

        HelpIndicator:
            help_text: root.description
            pos_hint: {"center_y":.5}

    NumericInput:
        id: input
        stored_value: root.value
        min_value: root.min_value
        max_value: root.max_value
        size_hint: 1, None
        on_stored_value: root.value = self.stored_value

<StringSettingView>:
    orientation: 'vertical'
    spacing: "15dp"

    Label:
        text: root.title
        font_size: 16
        text_size: self.size
        size_hint: None,None
        halign: 'left'
        font_name: 'Inter-Medium'
        color: app.theme_manager.text_color

    CustomTextField:
        id: input
        stored_value: root.value

<RangeSettingView>:
    orientation: 'vertical'
    spacing: "15dp"

    Label:
        text: root.title
        font_size: 16
        text_size: self.size
        size_hint: None,None
        halign: 'left'
        font_name: 'Inter-Medium'
        color: app.theme_manager.text_color

    CustomSlider:
        id: input
        stored_value: root.value

<OptionSettingView>:
    orientation: 'vertical'
    spacing: "15dp"

    Label:
        text: root.title
        font_size: 16
        text_size: self.size
        size_hint: None,None
        halign: 'left'
        font_name: 'Inter-Medium'
        color: app.theme_manager.text_color

    CustomDropDown:
        id: input
        options: root.options
        selected_option: root.value
        on_select_callback: root.set_value(self.selected_option)



