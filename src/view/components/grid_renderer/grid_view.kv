<GridCell>
    canvas:
        Color:
            rgba: app.theme_manager.bg_border_color
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<GridView>:
    pos_hint: {'center_x': 0.5, "center_y": 0.5 }

    CustomScatterLayout:
        id: scatter
        auto_bring_to_front: False
        do_rotation: False
        do_scale: True
        do_translation: True
        GridLayout:
            id: grid
            size_hint: None, None
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

    AnchorLayout:
        id: bottom_bar
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: (0, "10dp", 0, "10dp")
        pos_hint: {'center_x': 0.5, "center_y": 0.5 }

    AnchorLayout:
        id: top_bar
        anchor_x: 'center'
        anchor_y: 'top'
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        BoxLayout:
            canvas:
                Color:
                    rgba: app.theme_manager.secondary_bg_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10, 10, 10, 10]
            orientation: "horizontal"
            size_hint: None, None
            size: self.minimum_size
            padding: 10
            spacing: 10

            MDIconButton:
                icon: "arrow-left"
                on_release: root.navigate_page("previous")

            Label:
                id: page_label
                text: str(root.current_page) + "/" + str(root.total_pages)
                halign: "center"
                valign: "middle"
                size_hint: None, None
                size: self.texture_size
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDIconButton:
                icon: "arrow-right"
                on_release: root.navigate_page("next")

            CustomButton:
                id: step_count
                text: "Step: " + str(root.current_step) + "/" + str(root.total_steps)
                


